<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="Support"
        android:title="Support">
        <Preference
            android:title="支持"
            app:key="support"
            app:summary="如果你觉得这个应用还不错，评分支持一下吧" />
        <Preference
            android:title="贡献"
            app:key="pr"
            app:summary="如果你希望且有能力帮助改进这个应用，欢迎PR" />
        <Preference
            android:title="感谢"
            app:key="thanks"
            app:summary="@string/thanks" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Contributors">
        <Preference
            android:summary="💻"
            app:icon="@drawable/xuemo"
            app:key="xuemo"
            app:title="LuckXuemo" />
        <Preference
            android:summary="💻"
            app:icon="@drawable/hunterx9"
            app:key="hunterx9"
            app:title="hunterx9" />
        <Preference
            android:summary="📖"
            app:icon="@drawable/skimige"
            app:key="Skimige"
            app:title="Skimige" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="huonaicai"
        android:title="捐赠"
        app:isPreferenceVisible="false">
        <Preference
            android:title="支付宝"
            app:enableCopying="true"
            app:key="alipay"
            app:selectable="true"
            app:summary="@string/support" />
        <Preference
            android:title="微信"
            app:key="wepay"
            app:selectable="true"
            app:summary="click" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>